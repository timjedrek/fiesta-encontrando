<!--Container for both sides-->
<div class="flex flex-row h-screen bg-slate-900 text-slate-200">

  <!--Left side form-->
  <div class="flex flex-col md:w-3/5 justify-center items-center">
      <h1 class="my-4 text-3xl font-semibold text-center">
      Incia a Fiesta Encontrando
      </h1>
    <div class="items-center justify-center p-6 p-12 md:w-1/2">
      <div class="w-full">
        
        <% if notice.present? %>
          <p class="my-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" id="notice"><%= notice %></p>
        <% end %>
        <% if alert.present? %>
          <p class="my-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" id="alert"><%= alert %></p>
        <% end %>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { data: { turbo: false} } ) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= devise_error_messages! %>

        <div class="mt-4">
          <%= f.label :el_correro_electrónico, class: "text-sm" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "El correro electrónico", placeholder: "El correro electrónico", class: "w-full px-4 py-2 text-sm text-black border rounded-md focus:border-brightRedLight focus:outline-none focus:ring-1 focus:ring-brightRedLight" %>
        </div>
        <div>
            <%= f.label :contraseña, class: "text-sm" %><br />
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "Contraseña", class: "w-full px-4 py-2 text-sm text-black border rounded-md focus:border-brightRedLight focus:outline-none focus:ring-1 focus:ring-brightRedLight"  %>
        </div>
        <% if devise_mapping.rememberable? %>
          <%= f.check_box :remember_me, class: "text-brightRed bg-gray-100 rounded border-gray-300" %>
          <%= f.label :guardar_para_la_próxima_vez, class: "text-sm" %>
        <% end %>
        <br>
        <%= f.submit "Inicia", class: "block w-full px-4 py-2 mt-4 text-sm font-medium leading-5 text-center text-slate-900 transition-colors duration-150 bg-slate-200 border border-transparent rounded-full active:bg-brightRedLight hover:bg-slate-300 focus:outline-none focus:shadow-outline-red" %>

        <div class="mt-4 text-center flex gap-3 ">
          <p class="text-sm">¿No tiene una cuenta? 
            <%= link_to 'Inscribe', new_user_registration_path, class: "hover:underline" %>.
          </p>
          <p class="text-sm">
            <%= link_to "¿Vuelve ala página principal?", root_path, class: "hover:underline" %>
          </p>
        </div>
        <% end %>
      </div>
    </div>

  </div>

  <!--right side picture (hidden in mobile view)-->
  <div class="hidden md:block w-2/5">
    <%= image_tag "sign_in/#{rand(5)}", class: "min-w-full min-h-full" %>
  </div>
</div>