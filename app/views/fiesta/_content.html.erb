<div class="bg-white px-2 md:px-10 md:pb-10 md:pt-5 ">
  <!--Headline and view more-->
  <div class="flex flex-row justify-between items-center py-3">
    <!--Headline-->
    <div class="font-bold">
      Fiestas Proximas
    </div>
    <!--View More-->
    <div class="text-slate-500 hover:bg-slate-100 rounded-xl p-2">
      Ver más
    </div>
  </div>
  <!--Actual feed content-->
  <div class="flex flex-row overflow-x-scroll pb-10" >
    <% @fiesta.limit(6).reverse_each do | fiestum | %>
      <!--Each bubble-->
      <div id="<%= dom_id fiestum %>" class="flex flex-col justify-start bg-white drop-shadow-md rounded-xl p-0 mx-2 mb-2">

        <!--Picture-->
        <div class="text-center w-full h-48 w-72 ">
          <%#= image_tag "fiestas/#{rand(12)}", class: "h-48 object-cover rounded-t-xl" %>
          <%= link_to fiestum do %>
            <%= image_tag "fiestas/#{rand(12)}", class: "h-48 object-cover rounded-t-xl" %>
          <% end %>
        </div>
        
        <!--date-->
        <div class="px-3">
          <strong class="block font-medium mb-1">
            <%= link_to fiestum.fetcha, fiestum, class: "hover:text-gray-600" %>
          </strong>
        </div>

        <!--Details-->
        <div class="px-3">
          <strong class="block font-medium mb-1">
            <%= link_to fiestum.nombre, fiestum, class: "hover:text-gray-600" %>
          </strong>
        </div>

        <!--Content.. the fiestum itself-->
        <div class="px-3">
          <%#= fiestum.descripcion %>
          <%= link_to fiestum.descripcion, fiestum, class: "hover:text-gray-600" %>
        </div>
        

        <div class="flex flex-row justify-between">
          <!--buttons-->
          <div class="text-xs flex text-gray-400 items-end hover:text-gray-500">
            <%= link_to "Más información", fiestum, class: "" %><br>
          </div>

          <!--Signature-->
          <div class="text-xs text-gray-400">
            <!--Username-->
            @<%= fiestum.creator.username %> <br>
            <!--Time Stamp-->
            <%= fiestum.created_at.strftime("%B %d, %Y") %>
            <br>
          </div>
        </div>
      </div>  
    <% end %>
  </div>
</div>

<hr class="mb-6">

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Fiesta</h1>
    <%= link_to 'New fiestum', new_fiestum_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="fiesta" class="min-w-full">
    <%= render @fiesta %>
  </div>
</div>